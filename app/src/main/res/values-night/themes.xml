<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RetroMVVM" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background</item>
        <item name="colorPrimaryVariant">@color/main_background</item>
        <item name="colorOnPrimary">@color/main_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/main_background</item>
        <!-- Status bar color. -->
        <item name="fontFamily">@font/actor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textSize">10sp</item>
        <item name="hideOnScroll">true</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RetroMVVM.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/actor</item>
        <item name="hideOnScroll">true</item>
    </style>

    <style name="Toolbar.TitleText.collapse" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">0.1sp</item>
        <item name="hideOnScroll">true</item>
        <item name="fontFamily">@font/actor</item>
    </style>

    <style name="Toolbar.TitleText.expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="fontFamily">@font/actor</item>
    </style>


    <style name="Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="tabGravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/actor</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="Image">
        <item name="android:gradientRadius">@dimen/_10ssp</item>
    </style>



    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20sdp</item>

    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <!-- Apply attributes here -->
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
    </style>


    <style name="splashScreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/main_background</item>
        <item name="fontFamily">@font/actor</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

</resources>